<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.myweb.reply.mapper.IReplyMapper">
<!-- 
	<resultMap type="com.spring.mvc.board.model.ReplyVO" id="ReplyMap">
		<result property="replyId" column="reply_id" />
		<result property="replyPw" column="reply_id" />
		<result property="replyDate" column="reply_date" />
		<result property="updateDate" column="update_date" />
	</resultMap>
 -->
	<!-- 댓글 등록 -->
	<!-- void replyRegist(ReplyVO vo); -->
	<insert id="replyRegist">
		INSERT INTO freereply
		(rno, bno, reply, reply_id, reply_pw)
		VALUES(freereply_seq.NEXTVAL, #{bno}, #{reply}, #{replyId}, #{replyPw})
	</insert>
	
	<!-- 목록 요청 -->
	<!-- List<ReplyVO> getList(Map<String, Object> data); -->
	
	<!-- 댓글 개수 -->
	<!-- int getTotal(int bno); -->
	<select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM freereply
	</select>
	
	<!-- 비밀번호 확인 -->
	<!-- int pwCheck(ReplyVO vo); -->
	<select id="pwCheck" resultType="int">
		SELECT COUNT(*)
		FROM freereply
		WHERE reply_id = #{replyId}
	</select>
	
	<!-- 댓글 수정 -->
	<!-- void update(ReplyVO vo); -->
	<update id="update">
		UPDATE freereply
		SET
			reply = #{reply}
		WHERE
			rno = #{rno}
	</update>
	
	<!-- 댓글 삭제 -->
	<!-- void delete(int rno); -->
	<delete id="delete">
		DELETE FROM freereply
		WHERE rno = #{rno}
	</delete>

</mapper>